{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "llvm-cov",
      "args": [
        "--open",
        "--all-features",
        "--ignore-filename-regex",
        "tests?.rs"
      ],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "none"
      },
      "label": "Code Coverage"
    }
  ]
}
