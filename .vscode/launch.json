{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'annatto' (in mem, env)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=annatto",
                    "--package=annatto"
                ],
                "filter": {
                    "name": "annatto",
                    "kind": "bin"
                },
            },
            "args": [
                "run",
                "--in-memory",
                "--env",
                "${input:workflow_file}"
            ],
            "cwd": "${workspaceFolder}"
            "env": {
				"ENV_VAR": "${input:env_var}"
			}
        }
    ],
    "inputs": [
        {
            "id": "workflow_file",
            "type": "promptString",
            "description": "Annatto workflow file",
            "default": ""
        },
        {
            "id": "env_var",
            "type": "promptString",
            "description": "The value of a single environment variable stored as ENV_VAR (can be empty)",
            "default": ""
        },
    ]
}
