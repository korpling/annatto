{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'annatto-cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=annatto-cli",
                    "--package=annatto"
                ],
                "filter": {
                    "name": "annatto-cli",
                    "kind": "bin"
                },
                "env": {"PYO3_CONFIG_FILE": "${workspaceFolder}/pyembedded/pyo3-build-config-file.txt"}
            },
            "args": ["${input:workflow_file}"],
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "workflow_file",
            "type": "promptString",
            "description": "Annatto workflow file",
            "default": ""
        },
    ]
}